package com.app.utils;

import com.app.dao.CategoryDao;
import com.app.pojos.Categories;

public class CategoryUtils {
	private static final CategoryDao category = null;
	
	category = new CategoryDao();
	
	public static void displayCategory() {
		System.out.println(
				"--------------------------------------------------------------------------------------------");
		System.out.printf("%5s%20s%30s\n", "id", "Title", "Descreption");
		System.out.println(
				"--------------------------------------------------------------------------------------------");
		category.showCategories().forEach(s -> System.out.printf("%5s%20s%40s\n", s.getId(),
				s.getTitle(), s.getDescriptions()));
		System.out.println(
				"--------------------------------------------------------------------------------------------");
	}
}
